# Django Configuration
DJANGO_SECRET_KEY=your-secret-key-here
DEBUG=False
DJANGO_ALLOWED_HOSTS=yourdomain.com,localhost
DJANGO_CORS_ALLOW_ALL=False
DJANGO_CORS_ALLOWED_ORIGINS=https://yourdomain.com

# Database Configuration
POSTGRES_DB=app_prod
POSTGRES_USER=app_user
POSTGRES_PASSWORD=your-password
SQL_HOST=postgres
SQL_PORT=5432
SQL_ENGINE=django.db.backends.postgresql

# Email Configuration
EMAIL_HOST=smtp.yourdomain.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_HOST_USER=noreply@yourdomain.com
EMAIL_PORT=587
EMAIL_USE_SSL=False

# External Services
SENTRY_DSN=https://your-sentry-dsn
ELASTIC_SERVICE=your-service-name
ELASTIC_TOKEN=your-elastic-token
ELASTIC_URL=https://your-elastic-url

# Media Storage
MEDIA_URL=/media/
MEDIA_ROOT=/app/media
